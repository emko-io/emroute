{
  "name": "@emkodev/emroute",
  "version": "1.5.0-beta.2",
  "description": "File-based router with triple rendering (SPA, SSR HTML, SSR Markdown). Zero dependencies.",
  "license": "BSD-3-Clause",
  "author": "emko.dev",
  "keywords": [
    "router",
    "routing",
    "spa",
    "ssr",
    "file-based",
    "framework",
    "deno",
    "typescript",
    "markdown"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vedokme/emroute.git"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "exports": {
    ".": "./src/index.ts",
    "./spa": "./src/renderer/spa/mod.ts",
    "./ssr/html": "./src/renderer/ssr/html.renderer.ts",
    "./ssr/md": "./src/renderer/ssr/md.renderer.ts",
    "./generator": "./tool/route.generator.ts",
    "./widget-generator": "./tool/widget.generator.ts",
    "./sitemap": "./tool/sitemap.generator.ts",
    "./server": "./server/dev.server.ts",
    "./server/cli": "./server/cli.deno.ts",
    "./server/deno": "./server/server.deno.ts",
    "./server/types": "./server/server.type.ts",
    "./overlay": "./src/overlay/mod.ts",
    "./types/navigation-api": "./src/type/navigation-api.d.ts"
  },
  "publish": {
    "include": [
      "src/",
      "server/",
      "tool/",
      "doc/",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ],
    "exclude": [
      "test/",
      ".build/"
    ]
  },
  "tasks": {
    "test": "deno test test/unit/*.test.ts",
    "test:unit": "deno test test/unit/*.test.ts",
    "test:unit:watch": "deno test test/unit/*.test.ts --watch",
    "test:browser": "deno test test/browser/**/*.test.ts --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:browser:none": "deno test test/browser/none/*.test.ts --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:browser:leaf": "deno test test/browser/leaf/*.test.ts --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:browser:root": "deno test test/browser/root/*.test.ts --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:browser:only": "deno test test/browser/only/*.test.ts --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:all": "deno test test/unit/*.test.ts & deno test test/browser/**/*.test.ts --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys & wait",
    "test:server": "TEST_PORT=4101 deno run --allow-net --allow-read --allow-write --allow-run --allow-env --allow-sys test/browser/shared/start-server.ts",
    "test:server:none": "TEST_PORT=4101 SPA_MODE=none deno run --allow-net --allow-read --allow-write --allow-run --allow-env --allow-sys test/browser/shared/start-server.ts",
    "test:server:leaf": "TEST_PORT=4102 SPA_MODE=leaf deno run --allow-net --allow-read --allow-write --allow-run --allow-env --allow-sys test/browser/shared/start-server.ts",
    "test:server:root": "TEST_PORT=4103 SPA_MODE=root deno run --allow-net --allow-read --allow-write --allow-run --allow-env --allow-sys test/browser/shared/start-server.ts",
    "test:server:only": "TEST_PORT=4104 SPA_MODE=only deno run --allow-net --allow-read --allow-write --allow-run --allow-env --allow-sys test/browser/shared/start-server.ts",
    "check": "deno check src/index.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "generate:routes": "deno run --allow-read --allow-write tool/cli.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-run --allow-env server/cli.deno.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "deno.ns"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
